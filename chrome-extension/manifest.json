{
  "manifest_version": 3,
  "name": "ApplyX - Automated Job Application",
  "version": "1.0.0",
  "description": "Automatically parse resumes and apply to jobs with AI assistance",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ApplyX Job Application Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "terminal-overlay.html", "terminal-overlay.js"],
      "matches": ["https://*/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
